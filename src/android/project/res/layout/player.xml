<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
   
  <LinearLayout android:id="@+id/info_layout"
	android:gravity="top"
	android:layout_weight="1.0"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@drawable/logo">
	
	<ViewFlipper android:id="@+id/info_flipper"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:paddingLeft="2dp"
		android:background="#1a305d">
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<TextView android:id="@+id/info_name_0"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:singleLine="true"
				android:shadowColor="#101010"
				android:shadowDx="1.0"
				android:shadowDy="1.0"
				android:shadowRadius="1.0" />
				
			<TextView android:id="@+id/info_type_0"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:singleLine="true"
				android:textColor="#c0c0c0"
				android:shadowColor="#101010"
				android:shadowDx="1.0"
				android:shadowDy="1.0"
				android:shadowRadius="1.0" />
		</LinearLayout>
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<TextView android:id="@+id/info_name_1"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:singleLine="true"						
				android:shadowColor="#101010"
				android:shadowDx="1.0"
				android:shadowDy="1.0"
				android:shadowRadius="1.0" />
				
			<TextView android:id="@+id/info_type_1"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:singleLine="true"
				android:textColor="#c0c0c0"
				android:shadowColor="#101010"
				android:shadowDx="1.0"
				android:shadowDy="1.0"
				android:shadowRadius="1.0" />
				
			<View
				android:layout_width="fill_parent"
				android:layout_height="2dp"/>
			<View
				android:layout_width="fill_parent"
				android:layout_height="2dp"
				android:background="#122241"/>
				
		</LinearLayout>
	</ViewFlipper>

	<FrameLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		
		<ScrollView
			android:layout_width="fill_parent"
			android:layout_height="fill_parent">
		
			<LinearLayout
			  android:orientation="vertical"
			  android:layout_width="fill_parent"
			  android:layout_height="wrap_content">
			  		  		
				<View
				  android:layout_width="fill_parent"
				  android:layout_height="2dp"/>
				  
			    <TextView android:id="@+id/info_mod"
				  android:layout_width="wrap_content" 
				  android:layout_height="wrap_content" /> 				  					
				

				
				<TextView android:id="@+id/text_instruments"
				  android:layout_width="wrap_content" 
			      android:layout_height="wrap_content"
			      android:textAppearance="?android:attr/textAppearanceMedium"
			      android:paddingTop="4dip"
			      android:text="Instruments"/>
			      	
				<TextView android:id="@+id/info_ins_list"
				  android:layout_width="wrap_content"
				  android:layout_height="wrap_content" />
			
			  </LinearLayout>
		  </ScrollView>
		  
		  <LinearLayout android:id="@+id/info_meters"
			  android:orientation="horizontal"
			  android:layout_width="wrap_content" 
			  android:layout_height="wrap_content"
			  android:textAppearance="?android:attr/textAppearanceMedium"
			  android:layout_gravity="bottom|center_horizontal"/>
	  </FrameLayout>  	  		
  </LinearLayout>
  	
  <View
	  android:layout_width="fill_parent"
	  android:layout_height="2dp"
	  android:background="#282828"/>

  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:paddingTop="2dp"
	android:background="#181818" >
	
    <TextView android:id="@+id/info_line"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content"
	  android:layout_weight="1.0"
	  android:typeface="monospace"
	  android:textStyle="bold"
	  android:includeFontPadding="false"
	  android:textScaleX="0.9"
	  android:textColor="#606060"
      android:shadowColor="#080808"
      android:shadowDx="1.0"
      android:shadowDy="1.0"
      android:shadowRadius="1.0"
	  android:paddingLeft="4dp" />
	  	
    <TextView android:id="@+id/elapsed_time"
      android:layout_width="wrap_content" 
      android:layout_height="wrap_content"
      android:typeface="monospace"
      android:textStyle="bold"
      android:includeFontPadding="false"
      android:textScaleX="0.9"
      android:textColor="#606060"
      android:shadowColor="#080808"
      android:shadowDx="1.0"
      android:shadowDy="1.0"
      android:shadowRadius="1.0"      
      android:paddingRight="4dp" />	  

  </LinearLayout>  		
  <LinearLayout
	android:gravity="center"
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:paddingLeft="4dp"
	android:paddingRight="2dp"
	android:background="#181818" >
	     
    <SeekBar android:id="@+id/seek"
        android:gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.95"
        android:paddingRight="4dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" />
                    
    <ImageButton android:id="@+id/loop"
        android:layout_weight="0.05"
        android:layout_width="wrap_content"
        android:layout_height="25dip"
        android:background="@drawable/btn_small" />
                
  </LinearLayout>
        
  <LinearLayout
     android:gravity="bottom"
     android:orientation="horizontal"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:background="#181818" >
     
     <ImageButton android:id="@+id/back"
         android:src="@drawable/back"
         android:layout_weight="1.0"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" />
     <ImageButton android:id="@+id/play"
         android:src="@drawable/pause"
         android:layout_weight="1.0"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" />
     <ImageButton android:id="@+id/stop"
         android:src="@drawable/stop"
         android:layout_weight="1.0"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" />
     <ImageButton android:id="@+id/forward"
         android:src="@drawable/forward"
         android:layout_weight="1.0"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" />       
   </LinearLayout>   

</LinearLayout>

